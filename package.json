{
  "private": true,
  "name": "screen-flower",
  "description": "screen util such as flower",
  "version": "0.2.0",
  "author": "YanQue",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "export CSC_IDENTITY_AUTO_DISCOVERY=false && nextron build",
    "build:prod": "nextron build --config electron-builder.prod.yml",
    "build:mac": "export CSC_IDENTITY_AUTO_DISCOVERY=false ; nextron build --mac --x64",
    "build:mac:universal": "nextron build --mac --universal",
    "build:win": "nextron build --win --ia32",
    "build:linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps",
    "build:@dev": "yarn run build:next && yarn run build:webpack && yarn run build:main:dev",
    "build:@production": "yarn run build:next && yarn run build:webpack && yarn run build:main:production && yarn run pack:electron",
    "build:next": "next build src/renderer",
    "build:webpack": "tsc -p tsconfig.webpack.json",
    "build:main:dev": "node webpack-config-js/webpack.config.development.js",
    "build:main:production": "node webpack-config-js/webpack.config.production.js",
    "pack:electron": "export CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --config electron-builder.yml"
  },
  "dependencies": {
    "@radix-ui/react-toolbar": "^1.1.0",
    "@radix-ui/themes": "^3.1.1",
    "electron-log": "^5.1.6",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "execa": "^9.3.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "inversify": "^6.0.2",
    "mac-screen-capture-permissions": "^2.1.0",
    "plyr": "^3.7.8",
    "plyr-react": "^5.3.0",
    "react-draggable": "^4.4.6",
    "react-rnd": "^10.4.11",
    "react-svg": "^16.1.34",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/helper-hoist-variables": "^7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.6",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.11",
    "@types/react": "^18.2.52",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "^24.13.3",
    "jest": "^29.7.0",
    "mocha": "^10.7.0",
    "next": "^14.2.4",
    "nextron": "https://github.com/yanquer/nextron.git#v9.2.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.77.7",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.93.0"
  }
}
